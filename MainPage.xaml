<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselOdev.MainPage"
             Title="Giriş"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{AppThemeBinding Light=#FDF2E9, Dark=#1C1C24}" Offset="0.0" />
                <GradientStop Color="{AppThemeBinding Light=#E3F2FD, Dark=#2C2C34}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView>
            <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">

                <Label Text="ÖDEV-3" 
                       FontSize="36" 
                       HorizontalOptions="Center" 
                       FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=#1565C0, Dark=White}"
                       CharacterSpacing="2"
                       Margin="0,20,0,10"/>

                <Frame HeightRequest="220" 
                       WidthRequest="220" 
                       CornerRadius="110" 
                       Padding="0" 
                       HorizontalOptions="Center" 
                       IsClippedToBounds="True"
                       HasShadow="True"
                       BorderColor="White"
                       BackgroundColor="White">

                    <Image Source="azizfoto.jpeg" 
                           Aspect="AspectFit" 
                           HeightRequest="220" 
                           WidthRequest="220"
                           VerticalOptions="Center"/>
                </Frame>

                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Muhammet Aziz ATALAY" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333, Dark=White}"/>

                    <Label Text="23010310011" 
                           FontSize="20" 
                           HorizontalOptions="Center"
                           TextColor="#2196F3"
                           FontAttributes="Italic"/>

                    <BoxView HeightRequest="1" 
                             WidthRequest="150" 
                             BackgroundColor="#2196F3" 
                             HorizontalOptions="Center" 
                             Margin="0,10"/>

                    <Label Text="Bartın Üniversitesi" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"/>

                    <Label Text="Bilgisayar Mühendisliği Bölümü" 
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>