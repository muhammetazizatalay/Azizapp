<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselOdev.GorevDetayPage"
             Title="Görev Detayı" BackgroundColor="#F3F3F3">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Görev:" FontAttributes="Bold" />
        <Entry x:Name="entBaslik" Placeholder="Yapılacak görev..." BackgroundColor="White"/>

        <Label Text="Detay:" FontAttributes="Bold" />
        <Editor x:Name="entDetay" Placeholder="Detay sayfası..." HeightRequest="150" BackgroundColor="White"/>

        <Label Text="Tarih:" FontAttributes="Bold" />
        <DatePicker x:Name="dtTarih" />

        <Label Text="Saat:" FontAttributes="Bold" />
        <TimePicker x:Name="tmSaat" />

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20">
            <Button Text="Tamam" 
        Clicked="KaydetClicked" 
        BackgroundColor="#512BD4" 
        TextColor="White" 
        WidthRequest="100" />
            <Button Text="İptal" Clicked="IptalClicked" BackgroundColor="#512BD4" TextColor="White" WidthRequest="100" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>